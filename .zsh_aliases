alias dsaf="dsa && nvf"
alias netf="net && nvf"
alias tuif="tui && nvf"
alias clif="cli && nvf"

# yazi
alias y='yazi'

function yy() {
	local tmp="$(mktemp -t "yazi-cwd.XXXXXX")"
	yazi "$@" --cwd-file="$tmp"
	if cwd="$(cat -- "$tmp")" && [ -n "$cwd" ] && [ "$cwd" != "$PWD" ]; then
		cd -- "$cwd"
	fi
	rm -f -- "$tmp"
}

